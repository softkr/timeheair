{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "타임헤어",
  "version": "0.1.0",
  "identifier": "com.timehair.app",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "타임헤어 관리 시스템",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": ["binaries/timehair-backend"],
    "resources": ["timehair.db"],
    "windows": {
      "wix": {
        "language": "ko-KR"
      }
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/softkr/timeheair/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "UPDATER_PUBLIC_KEY_PLACEHOLDER"
    }
  }
}
